{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "omar-openshift-template"
  },
  "labels": {
    "template": "omar-openshift-template"
  },
  "parameters": [
    {
      "name": "DEPLOYMENT_TARGET",
      "displayName": "DEPLOYMENT_TARGET",
      "description": "Deployment target (dev|stage|blue|green)",
      "required": true,
      "value": "dev"
    },
    {
      "name": "DOMAIN_NAME",
      "displayName": "DOMAIN_NAME",
      "description": "Host Domain Name",
      "required": true,
      "value": "ossim.io"
    },
    {
      "name": "WEB_PROXY_ROUTE_PREFIX",
      "displayName": "WEB_PROXY_ROUTE_PREFIX",
      "description": "Prefix for the web proxy mount",
      "required": true,
      "value": ""
    },
    {
      "name": "PKI_PROXY_ROUTE_PREFIX",
      "displayName": "PKI_PROXY_ROUTE_PREFIX",
      "description": "Prefix for the pki proxy mount",
      "required": true,
      "value": ""
    },
    {
      "name": "WEB_PROXY_ROUTE_NAME",
      "displayName": "WEB_PROXY_ROUTE_NAME",
      "description": "Name for the web proxy mount",
      "required": false,
      "value": "route-omar-target"
    },
    {
      "name": "PKI_PROXY_ROUTE_NAME",
      "displayName": "PKI_PROXY_ROUTE_NAME",
      "description": "Name for the web proxy mount",
      "required": false,
      "value": "route-pki-omar"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "creationTimestamp": null,
        "name": "${WEB_PROXY_ROUTE_NAME}",
        "namespace": "${DEPLOYMENT_TARGET}"
      },
      "spec": {
        "host": "${WEB_PROXY_ROUTE_PREFIX}.${DOMAIN_NAME}",
        "port": {
          "targetPort": "443-tcp"
        },
        "tls": {
          "termination": "passthrough",
          "insecureEdgeTerminationPolicy": "Redirect"
        },
        "to": {
          "kind": "Service",
          "name": "omar-web-proxy-app"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "name": "${PKI_PROXY_ROUTE_NAME}",
        "namespace": "${DEPLOYMENT_TARGET}"
      },
      "spec": {
        "host": "${PKI_PROXY_ROUTE_PREFIX}.${DOMAIN_NAME}",
        "port": {
          "targetPort": "443-tcp"
        },
        "tls": {
          "termination": "passthrough"
        },
        "to": {
          "kind": "Service",
          "name": "omar-pki-proxy-app"
        }
      }
    }
  ]
}
