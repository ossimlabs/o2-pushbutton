{
  "apiVersion": "v1",
  "kind": "Template",
  "metadata": {
    "name": "omar-openshift-template"
  },
  "labels": {
    "template": "omar-openshift-template"
  },
  "parameters": [
    {
      "description": "",
      "displayName": "",
      "name": "DOCKER_IMAGE_REPO",
      "value": "quay.io/radiantsolutions/"
    },
    {
      "description": "",
      "displayName": "",
      "name": "APP_NAME",
      "value": "omar-web-proxy-app"
    },
    {
      "name": "DEPLOYMENT_TARGET",
      "displayName": "DEPLOYMENT_TARGET",
      "description": "Deployment target (dev|stage|blue|green)",
      "required": true,
      "value": "dev"
    },
    {
      "name": "OPENSHIFT_DOCKER_REGISTRY_URL",
      "displayName": "OPENSHIFT_DOCKER_REGISTRY_URL",
      "description": "Openshift Docker Registry URL",
      "required": true,
      "value": "docker-registry-default.ossim.io"
    },
    {
      "name": "TAG",
      "displayName": "TAG",
      "description": "Docker Container Image Version Tag",
      "required": true,
      "value": "latest"
    },
    {
      "name": "OSSIM_VIDEO_DATA_PV_NAME",
      "displayName": "OSSIM_VIDEO_DATA_PV_NAME",
      "description": "Persistent volume storage base name",
      "required": true,
      "value": "ossim-video-data"
    },
    {
      "name": "WEB_PROXY_CRL_PV_NAME",
      "displayName": "WEB_PROXY_CRL_PV_NAME",
      "description": "Persistent volume storage base name",
      "required": true,
      "value": "web-proxy-crl"
    },
    {
      "name": "REPLICAS",
      "displayName": "REPLICAS",
      "description": "Number of replicas to deploy for a given service",
      "required": true,
      "value": "1"
    },
    {
      "name": "IMAGE_NAME",
      "displayName": "IMAGE_NAME",
      "description": "The name of the docker image to pull",
      "required": true,
      "value": ""
    },
    {
      "name": "INSECURE_REPOSITORY",
      "displayName": "INSECURE_REPOSITORY",
      "description": "Mark the image stream as an insecure repository",
      "value": "false"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftWebConsole"
        },
        "generation": 325,
        "labels": {
          "app": "omar-web-proxy-app"
        },
        "name": "omar-web-proxy-app",
        "namespace": "${DEPLOYMENT_TARGET}"
      },
      "spec": {
        "replicas": "${REPLICAS}",
        "selector": {
          "app": "omar-web-proxy-app",
          "deploymentconfig": "omar-web-proxy-app"
        },
        "strategy": {
          "activeDeadlineSeconds": 21600,
          "resources": {},
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": "25%",
            "timeoutSeconds": 600,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "annotations": {
              "openshift.io/generated-by": "OpenShiftWebConsole"
            },
            "creationTimestamp": null,
            "labels": {
              "app": "omar-web-proxy-app",
              "deploymentconfig": "omar-web-proxy-app"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "${OPENSHIFT_DOCKER_REGISTRY_URL}/${DEPLOYMENT_TARGET}/omar-web-proxy-app:${TAG}",
                "imagePullPolicy": "Always",
                "name": "omar-web-proxy-app",
                "ports": [
                  {
                    "containerPort": 80,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 443,
                    "protocol": "TCP"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "volumeMounts": [
                  {
                    "mountPath": "/etc/ssl/server-certs",
                    "name": "web-proxy-certs"
                  },
                  {
                    "mountPath": "/etc/httpd/conf.d",
                    "name": "web-proxy-conf"
                  },
                  {
                    "mountPath": "/etc/httpd/htpasswd",
                    "name": "web-proxy-htpasswd"
                  },
                  {
                    "mountPath": "/etc/ssl/crl",
                    "name": "web-proxy-crl"
                  },
                  {
                    "mountPath": "/var/www/html/video",
                    "name": "ossim-video-data",
                    "subPath": "videos"
                  }
                ]
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "securityContext": {},
            "terminationGracePeriodSeconds": 30,
            "volumes": [
              {
                "configMap": {
                  "name": "web-proxy-certs"
                },
                "name": "web-proxy-certs"
              },
              {
                "configMap": {
                  "name": "web-proxy-htpasswd"
                },
                "name": "web-proxy-htpasswd"
              },
              {
                "configMap": {
                  "name": "web-proxy-conf"
                },
                "name": "web-proxy-conf"
              },
              {
                "name": "web-proxy-crl",
                "persistentVolumeClaim": {
                  "claimName": "${WEB_PROXY_CRL_PV_NAME}-pvc"
                }
              },
              {
                "name": "ossim-video-data",
                "persistentVolumeClaim": {
                  "claimName": "${OSSIM_VIDEO_DATA_PV_NAME}-pvc"
                }
              }
            ]
          }
        },
        "test": false,
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "omar-web-proxy-app"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "omar-web-proxy-app:${TAG}",
                "namespace": "${DEPLOYMENT_TARGET}"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      },
      "waitForReady": true
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "openshift.io/generated-by": "OpenShiftWebConsole"
        },
        "creationTimestamp": null,
        "labels": {
          "app": "omar-web-proxy-app"
        },
        "name": "omar-web-proxy-app",
        "namespace": "${DEPLOYMENT_TARGET}"
      },
      "spec": {
        "ports": [
          {
            "name": "80-tcp",
            "port": 80,
            "protocol": "TCP",
            "targetPort": 80
          },
          {
            "name": "443-tcp",
            "port": 443,
            "protocol": "TCP",
            "targetPort": 443
          }
        ],
        "selector": {
          "deploymentconfig": "omar-web-proxy-app"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "omar-web-proxy-app",
        "namespace": "${DEPLOYMENT_TARGET}",
        "labels": {
          "application": "test"
        },
        "annotations": {
          "openshift.io/image.insecureRepository": "${INSECURE_REPOSITORY}"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": [
          {
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "${DOCKER_IMAGE_REPO}${IMAGE_NAME}:${TAG}"
            },
            "importPolicy": {
              "scheduled": true,
              "insecure": "${{INSECURE_REPOSITORY}}"
            },
            "name": "${TAG}",
            "referencePolicy": {
              "type": "Source"
            }
          }
        ]
      }
    }
  ]
}
